{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-dbg",
            "type": "shell",
            "command": "./build-dbg.sh",  // Command to run your build script
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-main-dbg",
            "type": "shell",
            "command": "./build-run.sh DEBUG && ./build/build DEBUG",  // Command to run your build script
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
